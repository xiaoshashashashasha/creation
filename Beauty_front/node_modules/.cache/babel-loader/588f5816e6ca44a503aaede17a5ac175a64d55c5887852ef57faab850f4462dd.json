    ElMessage.success('头像更新成功！');\n        showAvatarDialog.value = false;\n        await fetchUserInfo(); // 重新拉取用户信息，更新头像\n      } catch (err) {\n        console.error('上传或更新失败', err);\n        ElMessage.error('上传失败');\n      } finally {\n        uploading.value = false;\n      }\n    };\n    onMounted(() => {\n      fetchUserInfo();\n    });\n    const __returned__ = {\n      router,\n      showAvatarDialog,\n      selectedFile,\n      uploading,\n      avatarPreviewUrl,\n      userInfo,\n      roleMap,\n      fetchUserInfo,\n      backToHome,\n      openAvatarDialog,\n      closeAvatarDialog,\n      handleFileChange,\n      uploadAndUpdateAvatar,\n      onMounted,\n      ref,\n      get useRouter() {\n        return useRouter;\n      },\n      get userInfoService() {\n        return userInfoService;\n      },\n      get updateUserPicService() {\n        return updateUserPicService;\n      },\n      get uploadFile() {\n        return uploadFile;\n      },\n      get ElMessage() {\n        return ElMessage;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["onMounted","ref","useRouter","userInfoService","updateUserPicService","uploadFile","ElMessage","router","showAvatarDialog","selectedFile","uploading","avatarPreviewUrl","userInfo","roleMap","fetchUserInfo","res","value","data","err","error","backToHome","push","openAvatarDialog","closeAvatarDialog","handleFileChange","file","raw","URL","createObjectURL","uploadAndUpdateAvatar","warning","avatarUrl","success","console"],"sources":["C:/Users/32561/Desktop/毕设仓库/beauty-front/src/views/Mine/MyInfoPage.vue"],"sourcesContent":["<script setup>\r\nimport { onMounted, ref } from 'vue'\r\nimport { useRouter } from 'vue-router'\r\nimport { userInfoService,updateUserPicService } from '@/api/user'\r\nimport { uploadFile } from '@/api/fileUpload'\r\nimport { ElMessage } from 'element-plus'\r\n\r\nconst router = useRouter()\r\n\r\nconst showAvatarDialog = ref(false)\r\nconst selectedFile = ref(null)\r\nconst uploading = ref(false)\r\nconst avatarPreviewUrl = ref('')\r\nconst userInfo = ref({})\r\nconst roleMap = {\r\n  0: '普通用户',\r\n  1: '管理员',\r\n  2: '封禁用户'\r\n}\r\n\r\nconst fetchUserInfo = async () => {\r\n  try {\r\n    const res = await userInfoService()\r\n    userInfo.value = res.data\r\n  } catch (err) {\r\n    ElMessage.error('用户信息加载失败')\r\n  }\r\n}\r\n\r\nconst backToHome = () => {\r\n  router.push('/')\r\n}\r\n\r\n\r\n// 打开弹窗\r\nconst openAvatarDialog = () => {\r\n  showAvatarDialog.value = true\r\n  selectedFile.value = null\r\n}\r\n\r\nconst closeAvatarDialog = () => {\r\n  showAvatarDialog.value = false\r\n  selectedFile.value = null\r\n  avatarPreviewUrl.value = ''\r\n}\r\n\r\n\r\n// 选择文件\r\nconst handleFileChange = (file) => {\r\n  selectedFile.value = file.raw\r\n  avatarPreviewUrl.value = URL.createObjectURL(file.raw)\r\n}\r\n\r\n\r\n// 上传并更新头像\r\nconst uploadAndUpdateAvatar = async () => {\r\n  if (!selectedFile.value) {\r\n    ElMessage.warning('请先选择文件')\r\n    return\r\n  }\r\n  try {\r\n    uploading.value = true\r\n    const res = await uploadFile(selectedFile.value)\r\n    const avatarUrl = res.data  // 后端返回的图片地址\r\n\r\n    await updateUserPicService(avatarUrl)\r\n\r\n    ElMessage.success('头像更新成功！')\r\n    showAvatarDialog.value = false\r\n    await fetchUserInfo()  // 重新拉取用户信息，更新头像\r\n  } catch (err) {\r\n    console.error('上传或更新失败', err)\r\n    ElMessage.error('上传失败')\r\n  } finally {\r\n    uploading.value = false\r\n  }\r\n}\r\n\r\n\r\nonMounted(() => {\r\n  fetchUserInfo()\r\n})\r\n</script>\r\n\r\n<template>\r\n  <el-container class=\"view-box\">\r\n    <el-main class=\"main\">\r\n      <div class=\"main-content\">\r\n        <!-- 返回按钮 -->\r\n        <el-button\r\n            class=\"back-btn\"\r\n            type=\"primary\"\r\n            icon=\"el-icon-arrow-left\"\r\n            @click=\"backToHome\"\r\n            plain\r\n        >\r\n          返回首页\r\n        </el-button>\r\n\r\n        <div class=\"profile-box\">\r\n          <div class=\"avatar\">\r\n            <img :src=\"userInfo.user_pic\" alt=\"头像\" />\r\n          </div>\r\n          <div class=\"info\">\r\n            <el-descriptions title=\"账号信息\" column=\"1\" border>\r\n              <el-descriptions-item label=\"用户名\">{{ userInfo.username }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"昵称\">{{ userInfo.nickname }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"性别\">{{ userInfo.gender }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"邮箱\">{{ userInfo.email }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"入站时间\">{{ userInfo.created_at }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"粉丝数\">{{ userInfo.followers_count }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"关注数\">{{ userInfo.following_count }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"权限状态\">\r\n                <el-tag :type=\"userInfo.role === 0 ? 'info' : userInfo.role === 1 ? 'success' : 'danger'\">\r\n                  {{ roleMap[userInfo.role] }}\r\n                </el-tag>\r\n              </el-descriptions-item>\r\n            </el-descriptions>\r\n\r\n            <!-- 操作按钮 -->\r\n            <div class=\"actions\">\r\n              <el-button type=\"warning\" plain style=\"margin-right: 12px\">修改密码</el-button>\r\n              <el-button type=\"primary\" plain @click=\"openAvatarDialog\">更换头像</el-button>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </el-main>\r\n  </el-container>\r\n\r\n  <!-- 更新头像 -->\r\n  <el-dialog v-model=\"showAvatarDialog\" title=\"上传新头像\" width=\"400px\" @close=\"closeAvatarDialog\">\r\n    <!-- 本地预览 -->\r\n    <div v-if=\"avatarPreviewUrl\" style=\"text-align: center; margin-bottom: 20px;\">\r\n      <img :src=\"avatarPreviewUrl\" alt=\"预览头像\" style=\"width: 120px; height: 120px; border-radius: 50%; object-fit: cover; border: 2px solid #ccc;\" />\r\n    </div>\r\n\r\n    <el-upload\r\n        class=\"upload-demo\"\r\n        :show-file-list=\"false\"\r\n        :before-upload=\"() => false\"   <!-- 阻止自动上传 -->\r\n    @change=\"handleFileChange\"\r\n    >\r\n    <el-button type=\"primary\">选择文件</el-button>\r\n    </el-upload>\r\n\r\n    <div style=\"margin-top: 20px; text-align: right;\">\r\n      <el-button @click=\"closeAvatarDialog\">取消</el-button>\r\n      <el-button\r\n          type=\"success\"\r\n          @click=\"uploadAndUpdateAvatar\"\r\n          :loading=\"uploading\"\r\n      >上传并保存</el-button>\r\n    </div>\r\n  </el-dialog>\r\n\r\n\r\n</template>\r\n\r\n\r\n<style scoped>\r\n.main-content {\r\n  flex: 1;\r\n  width: 100%;\r\n  max-width: 1000px;\r\n  height: 685px;\r\n  margin: 40px auto;\r\n  background: #fff;\r\n  padding: 30px;\r\n  padding-top: 20px;\r\n  border-radius: 12px;\r\n  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);\r\n}\r\n\r\n.profile-box {\r\n  display: flex;\r\n  gap: 40px;\r\n  align-items: flex-start;\r\n}\r\n\r\n.avatar img {\r\n  width: 140px;\r\n  height: 140px;\r\n  object-fit: cover;\r\n  border-radius: 50%;\r\n  border: 3px solid #dcdfe6;\r\n}\r\n\r\n.actions {\r\n  margin-top: 20px;\r\n}\r\n\r\n.info {\r\n  flex: 1;\r\n}\r\n\r\n::v-deep(.el-descriptions__title) {\r\n  font-size: 28px;\r\n}\r\n::v-deep(.el-descriptions__body td) {\r\n  font-size: 18px !important;\r\n  padding: 12px 16px;\r\n}\r\n\r\n.back-btn {\r\n  z-index: 10;\r\n  margin-bottom: 20px;\r\n}\r\n</style>\r\n"],"mappings":";;;;AACA,SAASA,SAAS,EAAEC,GAAG,QAAQ,KAAK;AACpC,SAASC,SAAS,QAAQ,YAAY;AACtC,SAASC,eAAe,EAACC,oBAAoB,QAAQ,YAAY;AACjE,SAASC,UAAU,QAAQ,kBAAkB;AAC7C,SAASC,SAAS,QAAQ,cAAc;;;;;;;IAExC,MAAMC,MAAM,GAAGL,SAAS,CAAC,CAAC;IAE1B,MAAMM,gBAAgB,GAAGP,GAAG,CAAC,KAAK,CAAC;IACnC,MAAMQ,YAAY,GAAGR,GAAG,CAAC,IAAI,CAAC;IAC9B,MAAMS,SAAS,GAAGT,GAAG,CAAC,KAAK,CAAC;IAC5B,MAAMU,g