{"ast":null,"code":"import { onMounted, ref } from 'vue';\nimport { userInfoService } from '@/api/user';\nimport { ElMessage } from 'element-plus';\n\n// 用户信息状态\n\nexport default {\n  __name: 'MyInfoPage',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const userInfo = ref({});\n\n    // 权限状态映射\n    const roleMap = {\n      0: '管理员',\n      1: '普通用户',\n      2: '封禁用户'\n    };\n    const fetchUserInfo = async () => {\n      try {\n        const res = await userInfoService();\n        userInfo.value = res.data;\n      } catch (err) {\n        ElMessage.error('用户信息加载失败');\n      }\n    };\n    onMounted(() => {\n      fetchUserInfo();\n    });\n    const __returned__ = {\n      userInfo,\n      roleMap,\n      fetchUserInfo,\n      onMounted,\n      ref,\n      get userInfoService() {\n        return userInfoService;\n      },\n      get ElMessage() {\n        return ElMessage;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["onMounted","ref","userInfoService","ElMessage","userInfo","roleMap","fetchUserInfo","res","value","data","err","error"],"sources":["C:/Users/32561/Desktop/毕设仓库/beauty-front/src/views/MyInfoPage.vue"],"sourcesContent":["<script setup>\r\nimport { onMounted, ref } from 'vue'\r\nimport { userInfoService } from '@/api/user'\r\nimport { ElMessage } from 'element-plus'\r\n\r\n// 用户信息状态\r\nconst userInfo = ref({})\r\n\r\n// 权限状态映射\r\nconst roleMap = {\r\n  0: '管理员',\r\n  1: '普通用户',\r\n  2: '封禁用户'\r\n}\r\n\r\nconst fetchUserInfo = async () => {\r\n  try {\r\n    const res = await userInfoService()\r\n    userInfo.value = res.data\r\n  } catch (err) {\r\n    ElMessage.error('用户信息加载失败')\r\n  }\r\n}\r\n\r\nonMounted(() => {\r\n  fetchUserInfo()\r\n})\r\n</script>\r\n\r\n<template>\r\n  <el-container class=\"view-box\">\r\n    <el-main class=\"main\">\r\n      <div class=\"main-content\">\r\n        <div class=\"profile-box\">\r\n          <div class=\"avatar\">\r\n            <img :src=\"userInfo.user_pic\" alt=\"头像\" />\r\n          </div>\r\n          <div class=\"info\">\r\n            <el-descriptions title=\"账号信息\"  column=\"1\" border>\r\n              <el-descriptions-item label=\"用户名\">{{ userInfo.username }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"昵称\">{{ userInfo.nickname }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"性别\">{{ userInfo.gender }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"邮箱\">{{ userInfo.email }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"入站时间\">{{ userInfo.created_at }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"粉丝数\">{{ userInfo.followers_count }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"关注数\">{{ userInfo.following_count }}</el-descriptions-item>\r\n              <el-descriptions-item label=\"权限状态\">\r\n                <el-tag :type=\"userInfo.role === 0 ? 'success' : userInfo.role === 1 ? 'info' : 'danger'\">\r\n                  {{ roleMap[userInfo.role] }}\r\n                </el-tag>\r\n              </el-descriptions-item>\r\n            </el-descriptions>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </el-main>\r\n  </el-container>\r\n</template>\r\n\r\n<style scoped>\r\n.main-content {\r\n  flex: 1;\r\n  width: 100%;\r\n  max-width: 1000px;\r\n  margin: 40px auto;\r\n  background: #fff;\r\n  padding: 30px;\r\n  border-radius: 12px;\r\n  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);\r\n}\r\n\r\n.profile-box {\r\n  display: flex;\r\n  gap: 40px;\r\n  align-items: flex-start;\r\n}\r\n\r\n.avatar img {\r\n  width: 140px;\r\n  height: 140px;\r\n  object-fit: cover;\r\n  border-radius: 50%;\r\n  border: 3px solid #dcdfe6;\r\n}\r\n\r\n.info {\r\n  flex: 1;\r\n}\r\n\r\n</style>\r\n"],"mappings":"AACA,SAASA,SAAS,EAAEC,GAAG,QAAQ,KAAK;AACpC,SAASC,eA